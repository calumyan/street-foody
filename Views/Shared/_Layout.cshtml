@* 
    The layout for all pages in the app, responsible for rendering conditional navigation bars,
    different pages in the <main> section, and a fixed footer.
*@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Street Foody</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;600;700&family=Satisfy&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    
</head>
<body>
    @if (ViewBag.IsHome!=null) {
        <partial name="~/Views/Partial/_NavBarPartial.cshtml" />
    } else {
        <partial name="~/Views/Partial/_SearchNavBarPartial.cshtml" />
    }

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <h1>Street Foody</h1>
        <h3>From Calumyan With &#10084;</h3>
    </footer>
    <div id="overlay"></div>
    <script src="~/js/anim.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
