        font-size:small;
        padding: 5px;
    }

    a:hover {
        color: black;
    }

    a:visited{
        color: black;
    }

    #info_ul{
        list-style: none;
        padding:10px;
        -webkit-padding-start: 0px;
    }

    #li_directions ion-icon{
        font-size: 1.0em;
        vertical-align: middle;
        margin-right: 10px;
        padding-top: 9px;
    }
    #li_phone ion-icon{
        font-size: 1.0em;
        vertical-align: middle;
        margin-right: 10px;
        padding-top: 1px;
    }

    ion-icon {
        color: black;
    }

    div.section{
        margin:20px;
    }

    hr{
        height: 2px;
        background-color: tomato;
    }


