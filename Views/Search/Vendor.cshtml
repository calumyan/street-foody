    .warning{
        font-family: "Quicksand", sans-serif;
        color: black;
        font-size: large;
        background-color: tomato;
        padding: 10px;
        margin-bottom: 10px;
        text-align: center;
        color: white;
    }

    #map {
        height: 300px;
        /* The height is 300 pixels */
        width:45%;
        /* The width is the width of the web page */
        padding:1vw;

    }
    .star{
        color:tomato;
        font-size: 2em;
        text-align:left;
        letter-spacing: 3px;
    }

    .price{
