    }

    .vendor-container img{
        object-fit:cover;
        margin:1.5vw;
        float:left;
        max-width: 250px;
        min-width: 175px;
    }

    .vendor-container{
        display:flex;
        flex-flow: row wrap;
        align-content:center;
        justify-content:center;
    }

    .card {
        justify-content: center;
        align-items: center;
        width: 300px;
        margin: 15px;
        border-style: solid;
        border-radius: 10px;
        border-width: 1px;
        border-color:gray ;
    }

    h1, h2, h3, h4 {
        font-family: "Quicksand", sans-serif;
    }


    .vendor-about{
        padding: 10px;
        background-color: white;
        flex-grow: 3;
    }

    .body-text {
        font-family: "Quicksand", sans-serif;
        color: black;
        font-size: large;
        margin-top: 10px;
        margin-bottom: 20px;
        margin-left: 20px;
        margin-right: 20px;
    }

    a:hover {
        color: black;
    }   

    a:link{
        color: black;
    }

    a:visited{
        color: black;
    }

    #info_ul{
        list-style: none;
        -webkit-padding-start: 0px;
    }
 
    #li_directions ion-icon{
        font-size: 1.0em;
        vertical-align: middle;
        margin-right: 10px;
        padding-top: 9px;
    }
    #li_phone ion-icon{
        font-size: 1.0em;
        vertical-align: middle;
        margin-right: 10px;
        padding-top: 1px;
    }   

    ion-icon {
        color: black;
    }

    div.section{
        margin:20px;
    }
    

</style>
</head>
