            <div class="vendor-info">
                <img src="~/images/location.png" alt="" class="inline-icon"> locationDisp
            </div>
            <div class="vendor-info">
                <img src="~/images/phone.png" alt="" class="inline-icon"> phoneDisp
            </div>
            <div class="vendor-info">
